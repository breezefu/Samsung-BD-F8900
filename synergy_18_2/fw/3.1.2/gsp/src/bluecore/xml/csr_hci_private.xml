<?xml version="1.0"?>

<definitions xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:noNamespaceSchemaLocation="..\hostio\hip.xsd">

    <resource name="FILE"/>
    <resource name="CSR_HCI_PRIVATE_SIGNALS" discriminant="CSR_HCI_PRIVATE_Signal_Id"/>

    <type name="csr_types_xml" resource="FILE" file="csr_types.xml"/>

    <type name="CsrHciPrivateNopInd" resource="CSR_HCI_PRIVATE_SIGNALS" dvalue="CsrHciPrivateNopInd">
        <field name="phandle">
            <!-- Handle to send the forwarded NOP message to -->
            <type>CsrSchedQid</type>
        </field>
        <field name="payloadLength">
            <!-- The length of the NOP message -->
            <type>CsrUint16</type>
        </field>
        <field name="payload" blocklength="payloadLength">
            <!-- Pointer to the forwarded NOP message -->
            <type>CsrUint8</type>
        </field>
    </type>

    <type name="CSR_HCI_PRIVATE_Signal_Id" partial="true" resource="TYPE" size="16" abbr="Sig">
        <value name="CsrHciPrivateNopInd" value="0x8000"/>
    </type>

</definitions>
